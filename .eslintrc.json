{
  "env": {
    "node": true,
    "browser": true,
    "es2021": true,
    "commonjs": true
  },
  "ignorePatterns": ["node_modules/"],
  "extends": [
    "next/core-web-vitals",
    // "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "plugins": ["@typescript-eslint"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "prettier/prettier": [
      2,
      {
        "error": true,
        "arrowParens": "always",
        "bracketSpacing": true,
        "bracketSameLine": false,
        "printWidth": 100,
        "proseWrap": "always",
        "requirePragma": false,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "all",
        "useTabs": false,
        "endOfLine": "auto"
      }
    ]
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "typescript": {}
    }
  },
  "globals": {
    "process": true
  }
}
